.prices
  padding 80px 0 144px
  background-color #f3f5f5

  &__title
    margin-bottom 57px

  &__list
    display flex
    justify-content flex-start
    flex-flow row wrap

.prices-item
  flex 380px 0 0
  margin-bottom 40px
  height 448px
  background-color #fff
  transition all .2s ease

  &:not(:nth-child(3n + 3))
    margin-right 20px

  &:hover
    box-shadow 0 6px 10px 0 rgba(0, 0, 0, 0.1)
    transition all .2s ease

  img
    display block
    width 100%
    height 222px

  &__inner
    padding 23px 24px 0

  &__name
    margin-bottom 8px
    font 24px 'RCR'
    color textColor

  &__price
    margin-bottom 24px
    font 32px 'RCB'
    color textColor
    text-transform uppercase

    span
      font 32px 'RCB'
      color textColor
      text-transform uppercase

  &__btn
    display flex
    justify-content center
    align-items center
    height 64px
    background-color #ffdc17
    font 18px 'RCB'
    letter-spacing 0.03em
    text-decoration none
    color textColor
    text-transform uppercase
    cursor pointer

+media1279()
  .prices
    padding 86px 0 50px

    &__title
      margin-bottom 73px

    &__list
      width 940px
      margin 0 auto

  .prices-item
    flex 300px 0 0
    margin-bottom 32px
    height 403px

    img
      height 174px

    &__inner
      padding 25px 24px 0

    &__price
      margin-bottom 24px
      font 34px 'RCB'

      span
        font 34px 'RCB'
        color textColor
        text-transform none
