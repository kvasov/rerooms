.supervision
  height 935px
  padding 80px 0 144px
  background-image url('/upload/supervision-bg.jpg')
  background-size cover
  background-repeat no-repeat

  &__container
    padding-left 799px !important

  &__title
    margin-bottom 12px
    letter-spacing 0 !important

  &__subtitle
    margin-bottom 31px
    font 18px/24px 'RCR'
    color rgba(56, 60, 69, 0.7)

+media1279()
  .supervision
    padding 80px 0 144px

    &__container
      padding-left calc(100% - 445px) !important

+media767()
  .supervision
    height auto
    position relative
    padding 337px 0 0
    background none

    &::before
      content ''
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 337px
      background-image url('/upload/supervision-bg.jpg')
      background-size cover
      background-repeat no-repeat


    &__container
      position relative
      padding 30px 15px 40px !important
      background-color #f3f5f5

      .form
        margin 0 auto

      &::before
        content ''
        display block
        position absolute
        box-sizing border-box
        top -20px
        left calc(50% - 16px)
        width 32px
        height 20px
        border-style solid
        border-width 0 16px 20px 16px
        border-color transparent transparent #f3f5f5 transparent

    &__title
      margin-bottom 6px

    &__subtitle
      margin-bottom 24px
      font 16px/22px 'RCR'
      text-align center
