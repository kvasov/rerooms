.steps
  padding 160px 0 144px
  background-color #fff

  &__title
    margin-bottom 7px

    br
      display none

  &__footnote
    margin-bottom 62px
    font 14px/20px 'RCR'
    color #8d9aa8
    text-align center
    letter-spacing .003em

    br
      display none

  &__list
    display flex
    justify-content space-between
    align-items flex-start
    flex-flow row wrap

.steps-item
  flex calc((100% - 40px) / 3) 0 0
  padding 0
  margin 0 0 16px

  &__num
    position relative
    font 44px 'RCB'
    color #828f9e

    &::before,
    &::after
      content ''
      display block
      position absolute

    &::before
      right 0
      top 25px
      width calc(100% - 74px)
      height 1px
      border-top 1px solid #dddedf

    &::after
      left 56px
      top 22px
      width 8px
      height 8px
      background #31353c

  &__date
    margin 16px 0
    font 16px 'RCB'
    text-transform uppercase
    letter-spacing .05em
    color textColor

  &__name
    margin 0 0 10px
    font 24px 'RCR'
    color textColor

  &__desc
    margin 0 0 30px
    padding-right 100px
    font 16px/24px 'RCL'
    color #8d9aa8
    letter-spacing .01em


+media1279()
  .steps
    padding 80px 0 34px
    background-color #fff

    &__title
      margin-bottom 17px

      br
        display inline

    &__footnote
      margin-bottom 62px

      br
        display inline

  .steps-item
    &__desc
      padding-right 60px

+media1023()
  .steps
    padding 80px 0 29px

  .steps-item
    flex calc((100% - 20px) / 2) 0 0
    margin 0 0 21px

+media767()
  .steps
    padding 80px 0 40px

    &__footnote
      margin-bottom 26px

      br
        display none

  .steps-item
    position relative
    flex 100% 0 0
    margin 0 0 21px

    &::before
      content ''
      display block
      position absolute
      left 15px
      top 70px
      width 1px
      height calc(100% - 66px)
      border-top none
      border-left 1px solid #dddedf

    &__num
      display inline-block
      font 30px 'RCB'

      &::before
        display none

      &::after
        left 11px
        top 49px

    &__date
      display inline-block
      position relative
      top -4px
      margin 0 0 0 6px

    &__name
      margin 5px 0 13px 40px

    &__desc
      margin 0 0 30px 40px
      padding-right 0
      font 16px/22px 'RCL'
